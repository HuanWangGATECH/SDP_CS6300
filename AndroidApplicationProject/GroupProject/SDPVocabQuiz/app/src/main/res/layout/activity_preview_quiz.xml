<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themedPracticeBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/previewQuizBackButton"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_84dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rounded_quiz_preview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/previewQuizTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="25dp"
                android:text="Biology"
                android:textAlignment="center"
                android:textColor="@color/themedOffBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/previewQuizAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="by Oindril"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/previewQuizDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="A quiz for Biology 101 which contains voabulary from Chapter 5 (Animal kingdoms)"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="25dp"
                android:text="Your Score Stats:"
                android:textColor="@color/themedBlue"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:text="First Score:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/themedOffBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previewQuizScoreFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="firstscore here"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:text="Highest Score:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/themedOffBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previewQuizScoreHighest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="highscore here"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="First 3 Perfect Scorers:"
                android:textAlignment="viewStart"
                android:textColor="@color/themedBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/previewQuizScorePerfect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="--------"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/previewQuizScorePerfect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="--------"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/previewQuizScorePerfect3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="--------"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:id="@+id/previewPracticeQuizButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/themedHighlightYellow"
            android:text="Practice Quiz" />

    </LinearLayout>

</RelativeLayout>