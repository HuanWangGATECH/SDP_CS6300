<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themedPracticeBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/viewResultsBack"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_84dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rounded_quiz_results"
            android:orientation="vertical">

            <TextView
                android:id="@+id/previewQuizTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="Biology"
                android:textAlignment="center"
                android:textColor="@color/themedOffBlack"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/trophy" />

                <TextView
                    android:id="@+id/resultScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="Your Score: Here"
                    android:textAlignment="center"
                    android:textColor="@color/themedGreenText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resultScoreDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="your score date here"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="Your Score Stats:"
                android:textAlignment="viewStart"
                android:textColor="@color/themedGreenText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:text="First Score:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/themedOffBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previewQuizScoreFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="firstscore here"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:text="Highest Score:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/themedOffBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previewQuizScoreHighest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="highscore here"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="First 3 Perfect Scorers:"
                android:textAlignment="viewStart"
                android:textColor="@color/themedGreenText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/previewQuizScorePerfect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="--------"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/previewQuizScorePerfect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="--------"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/previewQuizScorePerfect3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="--------"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>